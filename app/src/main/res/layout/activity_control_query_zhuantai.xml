<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="状态"
            android:layout_gravity="center"/>
    </android.support.v7.widget.Toolbar>

    <TextView
        android:background="@drawable/corners_bg_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="目标手机号"
        android:textSize="20sp"
        android:layout_weight="1"
        android:layout_margin="20dp"
        android:gravity="center"/>

       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:background="@drawable/center_letter_bg"
                android:layout_gravity="center"
                android:text="查询状态"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/btn_check_zhuangtai"
                />
        </LinearLayout>-
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <Button
                android:background="@drawable/center_letter_bg"
                android:layout_gravity="center"
                android:text="复归"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/btn_fugui"
                />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:background="@drawable/center_letter_bg"
                android:layout_gravity="center"
                android:text="预分"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/btn_yufen"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <Button
                android:background="@drawable/center_letter_bg"
                android:layout_gravity="center"
                android:text="分闸"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/btn_fenzha"
                />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:background="@drawable/center_letter_bg"
                android:layout_gravity="center"
                android:text="预合"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/btn_yuhe"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <Button
                android:background="@drawable/center_letter_bg"
                android:layout_gravity="center"
                android:text="合闸"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/btn_hezha"
                />
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:gravity="center"
            android:hint="状态"
            android:background="@drawable/corners_bg_tv"/>

    </LinearLayout>

</LinearLayout>
